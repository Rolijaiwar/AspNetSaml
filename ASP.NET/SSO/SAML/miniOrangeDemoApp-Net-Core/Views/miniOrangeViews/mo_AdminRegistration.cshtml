@using Microsoft.AspNetCore.Html;
@using miniOrange.saml;
@model miniOrange.saml.Model.AdminLoginModel;
@using miniOrange.saml.Utility;

@{

}

<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/miniOrangeContent/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/miniOrangeContent/css/boxicons.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/miniOrangeContent/css/solid.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/miniOrangeContent/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/miniOrangeContent/css/mo_maincss.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/miniOrangeContent/css/intlTelInput.min.css" asp-append-version="true" />
    <style>
        #forgot-password-link {
            text-align: center;
            color: #385898;
            cursor: pointer;
        }
    </style>

    <script src="~/miniOrangeContent/Scripts/jquery.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/miniOrangeContent/Scripts/bootstrap.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/miniOrangeContent/Scripts/intlTelInput.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/miniOrangeContent/Scripts/phoneValidation.js" asp-append-version="true"></script>
</head>
<body>
    <section class='material-half-bg'>
        <div class='cover'></div>
    </section>
    <section class='login-content'>
        <div class='col-md-6'>
            <div class='tile'>
                <h3 class='tile-title'>Register as a plugin administrator</h3>
                <form id='phoneForm' action='@Model.Baseurl?ssoaction=config&option=register' method='post'>

                    <input type='hidden' name='option' value='register' />
                    <input type='hidden' name='popup' value='true' />
                    <div class='tile-body'>

                        <div class='form-group row flexed-vertically'>

                            <label class='control-label col-md-3'><span class="required"></span>Email</label>
                            <div class='col-md-8 mt-1'>
                                <input type='email' class='form-control' placeholder='Enter your email' style='float:left;' name='email' required=''>
                            </div>
                        </div>
                        <div class='form-group row flexed-vertically nmt-2'>
                            <label class='control-label col-md-3'>
                                <span class="required"></span>Password
                                <i class='fa-solid fa-circle-info' data-toggle='tooltip' title='Password should contain (1 uppercase, 1 lowercase, 1 number, 1 special (~!#$%^&*()\-+.) ) characters each'></i>
                            </label>
                            <div class='col-md-8 mt-1'>
                                <input type='password' pattern="^.{8,}$" class='form-control' placeholder='Enter Password' style='float:left;' name='password' required=''>
                            </div>
                        </div>
                        <div class='form-group row flexed-vertically'>
                            <label class='control-label col-md-3'>
                                <span class="required"></span>Confirm Password
                                <i class='fa-solid fa-circle-info' data-toggle='tooltip' title='Password should contain (1 uppercase, 1 lowercase, 1 number, 1 special  (~!#$%^&*()\-+.) ) characters each'></i>
                            </label>
                            <div class='col-md-8 mt-1'>
                                <input type='password' pattern="^.{8,}$" class='form-control' placeholder='Confirm Password' style='float:left;' name='cpassword' required=''>
                            </div>
                        </div>
                        <div class='form-group row flexed-vertically nmt-1'>
                            <label class='control-label col-md-3 flexed-vertically' style="gap:2px;">
                                &nbsp;&nbsp;&nbsp;Phone Number

                                <p style="font-size: xx-small; margin: 0;">(optional)</p>
                            </label>
                            <div class='col-md-8 mt-1'>
                                <input type='number' pattern="[0-9]{10}" class='form-control' placeholder='Enter your phone number (optional)' style='float:left;width:100%;' name='phoneNumber' id="phnNumber">
                                <small id="phnError" style="color:red; display:none;">Invalid phone number</small>
                            </div>
                        </div>
                    </div>
                    <div class='tile-footer'>
                        <div class='row'>
                            <div class='col-md-8 col-md-offset-3'>
                                <input type='submit' class='btn btn-primary' style='width:20%;' value='Register'>
                            </div>
                </form>
                <p>Already have an account? Login <a href="@Model.Baseurl?ssoaction=config&option=have_account" style="align-content: center;"> here</a></p>
            </div>
        </div>

        </div>
        </div>
    </section>

</body>

</html>
